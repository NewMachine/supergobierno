{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es2018", "esnext.asynciterable"]
  }
}
